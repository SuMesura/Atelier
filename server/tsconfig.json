{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "typeRoots": ["node_modules/@types", "src/@types"]
}
